<!DOCTYPE html>
<html lang="cs">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Base Template{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}

        <style>
            .status-tag {
                border-radius: 50% !important;
                -webkit-border-radius: 50% !important;
                -moz-border-radius: 50% !important;
                width: 2em;
            }
        </style>
    </head>
    <body>
        <section class="section">
            <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <span class="navbar-item is-size-5 has-text-weight-bold">
                        Workflow Documentation
                    </span>
                </div>

                <div id="navbarBasicExample" class="navbar-menu">
                    <div class="navbar-start">
                    </div>

                    <div class="navbar-end">
                    </div>
                </div>
            </nav>
        </section>
        {% block body %}{% endblock %}
    </body>

    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            let menuToggles = document.getElementsByClassName('menu-toggle');
            for (let i = 0; i < menuToggles.length; i++) {
                menuToggles[i].addEventListener('click', e => {
                    e.currentTarget.parentElement.childNodes[3].classList.toggle('is-hidden');
                });
            }

        });
    </script>

</html>
